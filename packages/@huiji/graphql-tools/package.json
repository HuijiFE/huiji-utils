{
  "name": "@huiji/graphql-loader",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "A tool kit to generate schema for GraphQL and type declaration for other languages.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "repository": "https://github.com/HuijiFE/huiji-utils",
  "keywords": [
    "vue",
    "webpack",
    "vebpack-loader",
    "markdown-it",
    "markdown-it-plugin"
  ],
  "author": "duduluu <duduluu@outlook.com>",
  "license": "MIT",
  "scripts": {
    "clean:dist": "rimraf ./dist",
    "build": "yarn clean:dist && tsc -p ./tsconfig.esm.json && tsc -p ./tsconfig.cjs.json",
    "lint": "tslint -c ./tslint.json -p ./tsconfig.esm.json -t verbose",
    "schema:intro": "curl -H \"Authorization: bearer $PERSONAL_ACCESS_TOKEN_TEST\" https://api.github.com/graphql >> .tmp/gh.intro.json",
    "schema:idl": "curl -H \"Authorization: bearer $PERSONAL_ACCESS_TOKEN_TEST\" -H \"Accept: application/vnd.github.v4.idl\" https://api.github.com/graphql >> .tmp/gh.idl.json",
    "schema": "yarn schema:intro && yarn schema:idl",
    "temp-dir": "rimraf .tmp && mkdirp .tmp",
    "test:unit": "jest --maxWorkers=4",
    "test": "yarn temp-dir && yarn schema && yarn test:unit"
  },
  "dependencies": {
    "@types/prettier": "^1.13.2",
    "axios": "^0.18.0",
    "loader-utils": "^1.1.0",
    "prettier": "^1.14.3",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/loader-utils": "^1.1.3",
    "@types/webpack": "^4.4.11"
  }
}
